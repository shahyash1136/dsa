import { render, screen, fireEvent } from '@testing-library/react';
import MyComponent from './MyComponent'; // Adjust the import based on your file structure

describe('MyComponent', () => {
  it('removes trailing comma on blur', () => {
    render(<MyComponent />);
    
    const input = screen.getByRole('textbox');

    // Set input value to 'test,'
    fireEvent.change(input, { target: { value: 'test,' } });
    
    // Simulate blur event
    fireEvent.blur(input);
    
    // Check if the input value is 'test' (trailing comma removed)
    expect(input.value).toBe('test');
  });

  it('keeps value unchanged if no trailing comma on blur', () => {
    render(<MyComponent />);
    
    const input = screen.getByRole('textbox');

    // Set input value to 'test'
    fireEvent.change(input, { target: { value: 'test' } });
    
    // Simulate blur event
    fireEvent.blur(input);
    
    // Check if the input value remains 'test'
    expect(input.value).toBe('test');
  });
});
