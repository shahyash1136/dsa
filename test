import React from 'react';

const MyComponent = ({ label, inputValue, setInputValue, onInputChange, dataTestId }) => {
  const handleBlur = () => {
    setInputValue(prevValue => prevValue.endsWith(',') ? prevValue.slice(0, -1) : prevValue);
  };

  return (
    <div>
      <label>{label}</label>
      <input
        type="text"
        value={inputValue}
        onBlur={handleBlur}
        onChange={onInputChange}
        data-testid={dataTestId}
      />
    </div>
  );
};

export default MyComponent;
