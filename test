import { render, fireEvent } from '@testing-library/react';
import MyComponent from './MyComponent'; // Adjust the import path as necessary

describe('MyComponent', () => {
  it('removes the trailing comma when handlebar is called', () => {
    const { getByRole } = render(<MyComponent />);
    const input = getByRole('textbox'); // Access the input element
    const button = getByRole('button', { name: /handle/i }); // Access the button element

    // Set input value to 'test,'
    fireEvent.change(input, { target: { value: 'test,' } });
    expect(input.value).toBe('test,');

    // Call handlebar
    fireEvent.click(button);

    // Check that the trailing comma has been removed
    expect(input.value).toBe('test');
  });

  it('does not change the input value if it does not end with a comma', () => {
    const { getByRole } = render(<MyComponent />);
    const input = getByRole('textbox');
    const button = getByRole('button', { name: /handle/i });

    // Set input value to 'test'
    fireEvent.change(input, { target: { value: 'test' } });
    expect(input.value).toBe('test');

    // Call handlebar
    fireEvent.click(button);

    // Check that the value remains unchanged
    expect(input.value).toBe('test');
  });
});
